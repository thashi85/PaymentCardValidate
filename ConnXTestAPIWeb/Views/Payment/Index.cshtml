@{
    Layout = "_Layout";

}

<form id="form">
    <div class="form-group">
        <label for="exampleInputCard">Card Type</label>
        <select class="form-control form-control-lg" id="cardType">
            <option value="1">Amex</option>
            <option value="2">Discover</option>
            <option value="3">Master Card</option>
            <option value="4">Visa</option>
        </select>
    </div>
   
    <div class="form-group">
        <label for="exampleInputCard">Card Number</label>
        <input type="text" class="form-control" id="exampleInputCard" aria-describedby="" placeholder="Card Number">
       
    </div>

    <button type="submit" class="btn btn-primary">Validate</button>
</form>
<div class="alert alert-success mt-2" id="success" style="display:none">
   
</div>

<div class="alert alert-danger mt-2" id="error" style="display:none">
   
</div>
@section Scripts{
    <script type="text/javascript">
     var WebAPIUrl="@ViewBag.WebAPIUrl"
    </script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/payment.js"></script>
}